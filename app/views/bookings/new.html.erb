<h2>New Booking</h2>

<%= simple_form_for [@item, @booking] do |f| %>
  <div class="form-inputs">
    <%= f.input :comment,
                input_html: { autocomplete: "comment" }%>
    <%= f.input :start_date,
                input_html: { autocomplete: "start_date" }%>
    <%= f.input :end_date,
                input_html: { autocomplete: "end_date" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Make Booking" %>
  </div>
<% end %>
